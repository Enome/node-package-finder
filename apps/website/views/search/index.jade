extends ../layout

block content
  include ../packages/mixins

  .search-info Searched for <strong>#{q}</strong> and found <strong>#{ result.count } packages</strong>

  .row
    for package in result.packages
      .span6
        .box.search-result
          h3
            a( href=url('packages_show', { id: package.name } ) )= package.name
            &nbsp;
            span.version - #{package.latest} 

          if(package.author)
            mixin person(package.author)

          .description= package.description

          include ../packages/_tags
